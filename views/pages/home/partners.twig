<section id="partners" class="partners">
	<div class="partners__wrapper">
		<h2 class="partners__title">Partners & Integrations</h2>
		<div class="partners__grid partners__grid--{{ post.get_field('partner_logos') | length > 4 ? 'spaced' : 'centered' }}">
			{% for item in post.get_field('partner_logos') %}
				<div class="partners__item">
					{% include 'shared/media.twig' with {
						source: item.logo_image.url,
						alt: item.logo_image.alt,
						class: 'partners__item-image',
					}%}
				</div>
			{% endfor %}
		</div>
	</div>
</section>
