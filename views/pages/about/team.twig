{% if post.get_field('team_title') %}
	<section class="team-intro">
		<div class="team-intro__wrapper">
			<h2 class="h-one">{{ post.get_field('team_title') }}</h2>
			<p><strong class="h-two">{{ post.get_field('team_intro') }}</strong></p>
		</div>
	</section>
{% endif %}

<section class="team-members">
	<div class="team-members__wrapper">

		{% for item in post.get_field('team_members') %}
			<div class="team-members__member">
				<h2>{{ item.name }}</h2>
				{{ item.bio }}
			</div>
		{% endfor %}

	</div>
</section>