{% extends 'base.twig' %}

{% set template = 'construction' %}

{% block content %}
	<div id="construction" class="page page--construction">
		{% include 'shared/page-hero.twig' with {
			title: post.title,
			image: post.thumbnail.src
		}%}
		{% include 'shared/content-image.twig' with {
			title: post.get_field('intro_title'),
			image: post.get_field('intro_image'),
			text: post.get_field('intro_text'),
		}%}
		{% include 'shared/page-builder.twig' with {
			layouts: post.get_field('content_blocks'),
		}%}
		{% include 'shared/testimonials.twig' %}
	</div>
{% endblock %}
