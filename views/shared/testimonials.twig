<section class="testimonials" style="
	background-image: url(
		{% if options.testimonials_background %}
			{{ options.testimonials_background.url }}
		{% else %}
			{{ theme.link ~ '/dist/images/default.jpg' }}
		{% endif %}
	);
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
" title="{{ options.testimonials_background.alt }}">
	<div class="testimonials__slider">
		<div class="testimonials__slider--items swiper-wrapper">

			{% for item in options.testimonials_slider %}
				<article class="testimonials__slider--item swiper-slide" data-index="{{ loop.index }}">
					<div class="testimonials__slider--item__wrapper">
						<div class="testimonials__slider--item__quote">
							<p>{{ item.quote }}</p>
						</div>
						<div class="testimonials__slider--item__cite">
							<cite>{{ item.name }}</cite>
						</div>
					</div>
				</article>
			{% endfor %}

		</div>
		<div class="testimonials__slider--nav">
			<div class="testimonials__slider--buttons">
				<button class="testimonials__slider--buttons--previous"><span></span></button>
				<button class="testimonials__slider--buttons--next"><span></span></button>
			</div>
		</div>
	</div>

</section>